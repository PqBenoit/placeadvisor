extends ../layout

block content
	div(class='col-sm-10 col-sm-offset-1')
		h1 Top 3 :
	ul(class='col-sm-10 col-sm-offset-1')
		each review in reviews
			li(class='review-li')
				a(class='col-sm-3 link-to-review' href='http://localhost:3000/reviews/#{review._id}')= review.name
				span(class='col-sm-3 span-to-review')= review.placeType
				
				- var n = 0
				div(class="stars-container")
					while n < review.stars
						img(src='/images/flag.png' width='20', height='20')
						- var n = n + 1